<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.qspottertest">
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the "MyLocation" functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logoqspotter250"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logoqspotter250"
        android:supportsRtl="true"
        android:theme="@style/SplashTheme">
        <activity
            android:name=".actividades.FavoritosActivity"
            android:theme="@style/NoActionBar"/>
        <activity
            android:name=".actividades.PublicarAvisoDesabastecimientoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".actividades.PublicarAvisoFilaActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".actividades.SeleccionarAvisoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".actividades.LoginActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".actividades.MapsActivity"
            android:label="@string/title_activity_maps"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
    </application>

</manifest>